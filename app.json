{
  "expo": {
    "name": "AcousticOne",
    "slug": "AcousticOne",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/lightAO.png",
    "scheme": "acousticone",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSMicrophoneUsageDescription": "This app needs microphone access to sample audio for the automatic genre detection feature.",
        "NSLocationWhenInUseUsageDescription": "This app needs location access to read your WiFi network name (SSID) and find the device.",
        "NSLocalNetworkUsageDescription": "This app needs to connect to devices on your local network to control your audio system."
      }
    },
    "android": {
      "package": "com.acousticone.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/lightAO.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.ACCESS_FINE_LOCATION",
        "android.permission.RECORD_AUDIO",
        "android.permission.INTERNET",
        "android.permission.ACCESS_NETWORK_STATE",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_WIFI_STATE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/lightAO.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/lightAO.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "image": "./assets/images/darkAO.png",
            "backgroundColor": "#121212"
          }
        }
      ],
      "expo-sqlite",
      "expo-web-browser"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "e8d24f4c-6c48-4751-8668-ae19b6bfb4b6"
      }
    }
  }
}
